# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sales_automation
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# HubSpot API
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_ACCESS_TOKEN=your_access_token_here

# Miitel API
MIITEL_API_URL=https://api.miitel.com
MIITEL_API_KEY=your_miitel_api_key_here
MIITEL_API_SECRET=your_miitel_api_secret_here

# Google Calendar API
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./google-service-account.json

# OpenAI API (for call summaries)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASSWORD=your_email_password_here
EMAIL_FROM=sales@company.com

# Application Settings
SUMMARY_PROMPT_TEMPLATE=default
MEETING_REMINDER_24H=true
MEETING_REMINDER_1H=true

# Logging
LOG_LEVEL=info
